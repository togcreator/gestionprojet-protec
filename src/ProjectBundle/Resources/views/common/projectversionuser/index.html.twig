{% extends 'base.html.twig' %}

{# titre de la page #}
{% block title %}Back Office - {{ 'project.version_user'|trans({}, 'projectversionuser')}}{% endblock %}

{% block body %}
    {# adding head of header page #}
    {% include 'header.html.twig' %}

    <!-- Page container -->
    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Page length options -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'projectversionusers.list'|trans({}, 'projectversionuser') }}</h5><br/>
                        <button type="button" class="btn bg-teal-400 btn-labeled legitRipple" onclick="document.location='{{ path('projectversionuser_new')}}'">
                            <b><i class="icon-add"></i></b> {{ 'projectversionusers.add_button'|trans({}, 'projectversionuser') }}
                        </button>

                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="close" href="{{ path('projectversionuser_index') }}"></a></li>
                            </ul>
                        </div>
                    </div>
                {% if projectVersionUsers %}
                    <table class="table datatable-basic">
                        <thead>
                            <tr>
                                <th>{{ '#' }}</th>
                                <th>{{ 'projectversionusers.idUser'|trans({}, 'projectversionuser') }}</th>
                                <th>{{ 'projectversionusers.datedebut'|trans({}, 'projectversionuser') }}</th>
                                <th>{{ 'projectversionusers.datefin'|trans({}, 'projectversionuser') }}</th>
                                <th class="text-center">{{ 'projectversionusers.actions'|trans({}, 'projectversionuser') }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for projectVersionUser in projectVersionUsers %}
                            <tr>
                                <td style="cursor:pointer">{{ projectVersionUser.id }}</td>
                                <td>{{ projectVersionUser.user.firstname }} {{ projectVersionUser.user.lastname }}</td>
                                <td>{{ projectVersionUser.datedebut|date(date_format) }}</td>
                                <td>{{ projectVersionUser.datefin|date(date_format) }}</td>
                                <td class="text-center">
                                    <ul class="icons-list">
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                <i class="icon-menu9"></i>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-right">
                                                <li><a href="{{ path('projectversionuser_edit', { 'id': projectVersionUser.id }) }}"><i class="icon-pen"></i> {{ 'projectversionusers.edit_button'|trans({}, 'projectversionuser') }}</a></li>
                                                <li><a href="{{ path('projectversionuser_delete', { 'id': projectVersionUser.id }) }}" data-target="#modal_remote" data-toggle="modal"><i class="icon-folder-remove"></i> {{ 'projectversionusers.del_button'|trans({}, 'projectversionuser') }}</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <table class="table datatable-show-all">
                        <tbody>
                            <tr>
                                <td>{{ 'projectversionusers.no_data'|trans({}, 'projectversionuser') }}</td>
                            </tr>
                        </tbody>
                    </table>
                {% endif %}
                </div>
            </div>
        </div>
    </div>            
    {% include 'foot.html.twig' %}
{% endblock %}