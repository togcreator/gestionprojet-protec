{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{asset('assets/js/plugins/forms/styling/switchery.min.js')}}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {# adding head of header page #}
    {% include 'header.html.twig' %}

        <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">
                {{ form_start(edit_form) }}
                <!-- Form horizontal -->
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'projectetapesoperationsusers.edition'|trans({}, 'projectetapesoperationsusers') }} - {{ ProjectEtapesOperationsUser.user.firstname }}</h5>
                        <div class="heading-elements">
                            <button type="button" class="btn btn-primary pull-left" style="margin-right: 10px" onclick="document.location = '{{  path('operationsusers_new') }}'"> <b><i class="icon-add"></i></b> {{ 'projectnotes.add_button'|trans({}, 'projectnotes') }}</button>
                            <button type="button" class="btn btn-primary btn-danger pull-left" href="{{ path('operationsusers_delete', { 'id': edit_form.vars.value.id }) }}" style="margin-right: 10px" data-target="#modal_remote" data-toggle="modal"> <b><i class="icon-folder-remove"></i></b> {{ 'projectnotes.del_button'|trans({}, 'projectnotes') }}</button>
                            <ul class="icons-list">
                                {% if app.request.get('idProject') %}
                                <li><a data-action="close" href="{{ path('project_edit', {'id': app.request.get('idProject')}) }}#user"></a></li>
                                {% elseif app.request.get('idOperation') %}
                                <li><a data-action="close" href="{{ path('projectetapesoperations_edit', {'id': app.request.get('idOperation')}) }}#user"></a></li>
                                {% else %}
                                <li><a data-action="close" href="{{ path('operationsusers_index') }}"></a></li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                    {{ form_start(edit_form, {'attr': {'class':'form-horizontal'}}) }}
                            <fieldset class="content-group">
                                <legend class="text-bold">{{ 'projectetapesoperationsusers.project'|trans({}, 'projectetapesoperationsusers') }}</legend>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idProjetversion'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.idProjetversion, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.idProjetversion, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idEtape'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.idEtape, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.idEtape, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idOperation'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.idOperation, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.idOperation, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <legend class="text-bold">{{ 'projectetapesoperationsusers.info'|trans({}, 'projectetapesoperationsusers') }}</legend>
                                <div class="row">
                                     <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idUser'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.idUser, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.idUser, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idRole'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.idRole, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.idRole, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.mission'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.mission, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.mission, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <legend class="text-bold">{{ 'projectetapesoperationsusers.date'|trans({}, 'projectetapesoperationsusers') }}</legend>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        {% set name = 'projectetapesoperationsusers.datedebut'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.datedebut, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.datedebut, {'attr': {'class': 'form-control datepicker'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        {% set name = 'projectetapesoperationsusers.datefin'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.datefin, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.datefin, {'attr': {'class': 'form-control datepicker'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <legend class="text-bold">{{ 'projectetapesoperationsusers.other'|trans({}, 'projectetapesoperationsusers') }}</legend>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.flagActeur'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.flagActeur, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.flagActeur, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.flagInvite'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(edit_form.flagInvite, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.flagInvite, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div>{{ form_widget(edit_form.idUser, {'value': getCurrentUsers('id')}) }}</div>
                            </fieldset>
                            <button type="submit" class="btn btn-primary" value="Create">
                                {{ 'projectetapesoperationsusers.save_button'|trans({}, 'projectetapesoperationsusers') }}
                                <i class="icon-arrow-right14 position-right"></i>
                            </button>
                        {{ form_end(edit_form, {'render_rest': true}) }}
                        <script type="text/javascript">
                            (function($){
                                // notification
                                var notify = {
                                    success: function(message) {
                                        $.jGrowl(message, {
                                            header: '{{ 'global.notify_header_success'|trans }}',
                                            theme: 'bg-success'
                                        })
                                    },
                                    error: function(message) {
                                        $.jGrowl(message, {
                                            header: '{{ 'global.notify_header_error'|trans }}',
                                            theme: 'bg-danger'
                                        });
                                    }
                                };
                            }(jQuery))
                        </script>
                    </div>
                </div>
                <!-- /form horizontal -->

            </div>
            <!-- /main content -->

        </div>
        <!-- /page content -->

    </div>
{% endblock %}