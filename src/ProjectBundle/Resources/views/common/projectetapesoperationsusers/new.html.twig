{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{asset('assets/js/plugins/forms/styling/switchery.min.js')}}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {# adding head of header page #}
    {% include 'header.html.twig' %}

        <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Form horizontal -->
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'projectetapesoperationsusers.creation'|trans({}, 'projectetapesoperationsusers') }}</h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="close" href="{{ path('Issuesrealisations_index') }}"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                    {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
                            <fieldset class="content-group">
                                <legend class="text-bold">{{ 'projectetapesoperationsusers.project'|trans({}, 'projectetapesoperationsusers') }}</legend>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idProjetversion'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.idProjetversion, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idProjetversion, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idEtape'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.idEtape, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idEtape, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idOperation'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.idOperation, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idOperation, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <legend class="text-bold">{{ 'projectetapesoperationsusers.info'|trans({}, 'projectetapesoperationsusers') }}</legend>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idUser'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.idUser, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idUser, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.idRole'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.idRole, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idRole, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.mission'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.mission, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.mission, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <legend class="text-bold">{{ 'projectetapesoperationsusers.date'|trans({}, 'projectetapesoperationsusers') }}</legend>
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        {% set name = 'projectetapesoperationsusers.datedebut'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.datedebut, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.datedebut, {'attr': {'class': 'form-control datepicker'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group col-md-6">
                                        {% set name = 'projectetapesoperationsusers.datefin'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.datefin, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.datefin, {'attr': {'class': 'form-control datepicker'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <legend class="text-bold">{{ 'projectetapesoperationsusers.other'|trans({}, 'projectetapesoperationsusers') }}</legend>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.flagActeur'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.flagActeur, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.flagActeur, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'projectetapesoperationsusers.flagInvite'|trans({}, 'projectetapesoperationsusers') %}
                                        {{ form_label(form.flagInvite, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.flagInvite, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <button type="submit" class="btn btn-primary" value="Create">
                                {{ 'projectetapesoperationsusers.save_button'|trans({}, 'projectetapesoperationsusers') }}
                                <i class="icon-arrow-right14 position-right"></i>
                            </button>
                        {{ form_end(form, {'render_rest': true}) }}
                            <script type="text/javascript">
                            (function($){
                                // notification
                                var notify = {
                                    success: function(message) {
                                        $.jGrowl(message, {
                                            header: '{{ 'global.notify_header_success'|trans }}',
                                            theme: 'bg-success'
                                        })
                                    },
                                    error: function(message) {
                                        $.jGrowl(message, {
                                            header: '{{ 'global.notify_header_error'|trans }}',
                                            theme: 'bg-danger'
                                        });
                                    }
                                };

                                /* pour projet redirection */
                                $('[name*="[idProjetversion]"]').on('change', function(){
                                    var _location = document.location.href.toString().split('?');
                                    _location = _location[0];
                                    redirectTo(_location + '?idProject=' + this.value);
                                });

                            }(jQuery));
                        </script>
                    </div>
                </div>
                <!-- /form horizontal -->
            </div>
            <!-- /main content -->
        </div>
        <!-- /page content -->
    </div>
{% endblock %}