<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title">{{ 'projectnotes.confirm_title'|trans([], 'projectnotes') }}</h5>
</div>

<div class="modal-body">
    <h2>{{ 'projectnotes.confirm_delete'|trans([], 'projectnotes')}}</h2>
    {{ form_start(delete_form, {'attr': {'id': 'projectnotes_form'}}) }}
    {{ form_end(delete_form) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-danger" data-dismiss="modal">{{ 'projectnotes.close_button'|trans([], 'projectnotes') }}</button>
    <button type="button" class="btn btn-primary" onclick="jQuery('#projectnotes_form').submit()">{{ 'projectnotes.confirm_button'|trans([], 'projectnotes') }}</button>
</div>