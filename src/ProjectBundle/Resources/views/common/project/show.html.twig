
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title">{{ 'project.confirm_title'|trans([], 'project') }}</h5>
</div>

<div class="modal-body">
	{% if app.request.get('no') == 0 %}
	    <h2>{{ 'project.confirm_delete'|trans([], 'project')}}</h2>
	    {{ form_start(delete_form, {'attr': {'id': 'project_form'}}) }}
	    {{ form_end(delete_form) }}
	{% else %}
		<h2>{{ 'project.cant_delete'|trans([], 'project')}}</h2>
	{% endif %}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal">{{ 'project.close_button'|trans([], 'project') }}</button>
    {% if app.request.get('no') == 0 %}
    <button type="button" class="btn btn-primary" onclick="jQuery('#project_form').submit()">{{ 'project.confirm_button'|trans([], 'project') }}</button>
    {% endif %}
</div>

        

