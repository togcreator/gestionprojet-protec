<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title">{{ 'projectversions.confirm_title'|trans([], 'projectversion') }}</h5>
</div>

<div class="modal-body">
    <h2>{{ 'projectversions.confirm_delete'|trans([], 'projectversion')}}</h2>
    {{ form_start(delete_form, {'attr': {'id': 'projectversions_form'}}) }}
    {{ form_end(delete_form) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-danger" data-dismiss="modal">{{ 'projectversions.close_button'|trans([], 'projectversion') }}</button>
    <button type="button" class="btn btn-primary" onclick="jQuery('#projectversions_form').submit()">{{ 'projectversions.confirm_button'|trans([], 'projectversion') }}</button>
</div>