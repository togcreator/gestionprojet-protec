<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title">{{ 'jalon.confirm_title'|trans([], 'jalon') }}</h5>
</div>

<div class="modal-body">
    <h2>{{ 'jalon.confirm_delete'|trans([], 'jalon')}}</h2>
    {{ form_start(delete_form, {'attr': {'id': 'jalon_form'}}) }}
    {{ form_end(delete_form) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-danger" data-dismiss="modal">{{ 'jalon.close_button'|trans([], 'jalon') }}</button>
    <button type="button" class="btn btn-primary" onclick="jQuery('#jalon_form').submit()">{{ 'jalon.confirm_button'|trans([], 'jalon') }}</button>
</div>
