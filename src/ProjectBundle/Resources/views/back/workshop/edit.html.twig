{% extends 'base.html.twig' %}

{% block body %}
    {# adding head of header page #}
    {% include 'header.html.twig' %}

    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Form horizontal -->
                <div class="panel panel-white">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'workshop.edition'|trans({}, 'workshop') }}</h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="close" href="{{ path('back_workshop_index') }}"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">
                        {{ form_start(edit_form) }}
                            <fieldset class="content-group">
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'workshop.open'|trans({}, 'workshop') %}
                                        {{ form_label(edit_form.ouvert, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10 checkbox checkbox-switchery">
                                            {{ form_widget(edit_form.ouvert, {'attr': {'class': 'form-control switchery'}}) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'workshop.label'|trans({}, 'workshop') %}
                                        {{ form_label(edit_form.label, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.label, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        {% set name = 'workshop.obs'|trans({}, 'workshop') %}
                                        {{ form_label(edit_form.obs, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.obs, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        {% set name = 'workshop.nomcouleur'|trans({}, 'workshop') %}
                                        {{ form_label(edit_form.nomcouleur, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(edit_form.nomcouleur, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        {% set name = 'workshop.couleur'|trans({}, 'workshop') %}
                                        {{ form_label(edit_form.couleur, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10" style="padding: 25px 0">
                                            {{ form_widget(edit_form.couleur, {'attr': {'class': 'form-control colorpicker-show-input', 'data-preferred-format':'hex'}}) }}
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        {% set name = 'workshop.imgcouleur'|trans({}, 'workshop') %}
                                        {{ form_label(edit_form.imgcouleur, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10" style="padding: 15px 0">
                                             {% if isFile(edit_form.vars.value.logo) %}
                                                {% set preview = asset('uploads/' ~ edit_form.vars.value.imgcouleur)|default('') %}
                                            {% endif %}
                                            {{ form_widget(edit_form.imgcouleur, {'attr': {'class': 'form-control upload-file','data-preview': preview|default(''), 'filetype': filetype|default('')}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'workshop.logo'|trans({}, 'workshop') %}
                                        {{ form_label(edit_form.logo, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10" style="padding: 15px 0">
                                            {% if isFile(edit_form.vars.value.logo) %}
                                                {% set preview = asset('uploads/' ~ edit_form.vars.value.logo) %}
                                            {% endif %}
                                            {{ form_widget(edit_form.logo, {'attr': {'class': 'form-control upload-file', 'data-preview': preview|default(''), 'filetype': filetype|default('')}}) }}
                                        </div>
                                    </div>
                                </div>

                            </fieldset>
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary">{{ 'workshop.save_button'|trans({}, 'workshop') }} <i class="icon-arrow-right14 position-right"></i></button>
                            </div>
                        {{ form_end(edit_form, {'render_rest': true}) }}
                    </div>
                </div>
                <!-- /form horizontal -->

            </div>
            <!-- /main content -->

        </div>
        <!-- /page content -->

    </div>
    {% include 'foot.html.twig' %}
{% endblock %}
