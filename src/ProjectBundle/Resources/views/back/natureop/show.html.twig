<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title">{{ 'natureop.confirm_title'|trans([], 'natureop') }}</h5>
</div>

<div class="modal-body">
    <h2>{{ 'natureop.confirm_delete'|trans([], 'natureop')}}</h2>
    {{ form_start(delete_form, {'attr': {'id': 'natureop_form'}}) }}
    {{ form_end(delete_form) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-danger" data-dismiss="modal">{{ 'natureop.close_button'|trans([], 'natureop') }}</button>
    <button type="button" class="btn btn-primary" onclick="jQuery('#natureop_form').submit()">{{ 'natureop.confirm_button'|trans([], 'natureop') }}</button>
</div>
