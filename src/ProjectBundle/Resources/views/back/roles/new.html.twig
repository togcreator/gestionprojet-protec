{% extends 'base.html.twig' %}

{% block body %}
    {# adding head of header page #}
    {% include 'header.html.twig' %}

        <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Form horizontal -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'roles.creation'|trans({}, 'roles') }}</h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="close" href="{{ path('back_roles_index') }}"></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="panel-body">

                        {{ form_start(form) }}
                            <fieldset class="content-group">
                                {# <legend class="text-bold">Basic inputs</legend> #}
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'workshop.open'|trans %}
                                        {{ form_label(form.ouvert, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.ouvert, {'attr': {'class': 'form-control switchery'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    {% set name = 'workshop.wording'|trans %}
                                    {{ form_label(form.label, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.label, {'attr': {'class': 'form-control'}, 'row': 5}) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {% set name = 'priorite.couleur'|trans({}, 'priorite') %}
                                    {{ form_label(form.couleur, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.couleur, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    {% set name = 'priorite.obs'|trans({}, 'priorite') %}
                                    {{ form_label(form.obs, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.obs, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {% set name = 'priorite.nomcouleur'|trans({}, 'priorite') %}
                                    {{ form_label(form.nomcouleur, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.nomcouleur, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'priorite.imgcouleur'|trans({}, 'priorite') %}
                                        {{ form_label(form.imgcouleur, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10" style="margin-top: 15px">
                                            {{ form_widget(form.imgcouleur, {'attr': {'class': 'form-control upload-file', 'data-preview': ''}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group" >
                                        {% set name = 'priorite.img'|trans({}, 'priorite') %}
                                        {{ form_label(form.logo, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10" style="margin-top: 15px">
                                            {{ form_widget(form.logo, {'attr': {'class': 'form-control upload-file', 'data-preview': ''}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="hidden">
                                {{ form_widget(form.user, {'attr': {'class': 'form-control listbox-dynamic-options'}, 'row': 5}) }}
                                </div>
                            </fieldset>
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary">{{ 'workshop.submit_button'|trans }} <i class="icon-arrow-right14 position-right"></i></button>
                            </div>
                            {{ form_widget(form.idType, {'value': app.request.get('idType')|default(1)}) }}
                        {{ form_end(form, {'render_rest': true}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include 'foot.html.twig' %}
{% endblock %}