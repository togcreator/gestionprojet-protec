{% extends 'base.html.twig' %}

{# titre de la page #}
{% block title %}Back Office - entity{% endblock %}

{% block body %}
    {# adding head of header page #}
    {% include 'header.html.twig' %}

    <!-- Page container -->
    <div class="page-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <!-- Page length options -->
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'entity.list'|trans({}, 'entity') }}</h5><br/>
                        <button type="button" class="btn bg-teal-400 btn-labeled legitRipple" onclick="document.location='{{ path('back_entity_new')}}'">
                            <b><i class="icon-add"></i></b> {{ 'entity.add_button'|trans({}, 'entity') }}
                        </button>

                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="close" href="{{ path('back_entity_index')}}"></a></li>
                            </ul>
                        </div>
                    </div>
                {% if entityJs %}
                    <table class="table datatable-basic">
                        <thead>
                            <tr>
                                <th>{{ '#' }}</th>
                                <th>{{ 'entity.name'|trans({}, 'entity') }}</th>
                                <th>{{ 'entity.description'|trans({}, 'entity') }}</th>
                                <th class="text-center">{{ 'entity.actions'|trans({}, 'entity') }}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entityJs %}
                            <tr>
                                <td style="cursor:pointer" onclick="document.location = '{{ path('back_entity_show', { 'id': entity.id }) }}';">{{ entity.id }}</td>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.description}}</td>
                                <td class="text-center">
                                    <ul class="icons-list">
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                <i class="icon-menu9"></i>
                                            </a>
                                            <ul class="dropdown-menu dropdown-menu-right">
                                                <li><a href="{{ path('back_entity_edit', { 'id': entity.id }) }}"><i class="icon-pen"></i> {{ 'entity.edit_button'|trans({}, 'entity') }}</a></li>
                                                <li><a href="{{ path('back_entity_delete', { 'id': entity.id }) }}"
                                                    data-target="#modal_remote" data-toggle="modal"><i class="icon-folder-remove"></i> {{ 'entity.del_button'|trans({}, 'entity') }}</a></li>
                                            </ul>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <table class="table datatable-show-all">
                        <tbody>
                            <tr>
                                <td>{{ 'entity.no_data'|trans({}, 'entity') }}</td>
                            </tr>
                        </tbody>
                    </table>
                {% endif %}
                </div>
            </div>
        </div>
    </div>  
    {# footer #}          
    {% include 'foot.html.twig' %}

{% endblock %}