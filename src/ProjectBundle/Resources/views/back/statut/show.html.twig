<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title">{{ 'statut.confirm_title'|trans([], 'statut') }}</h5>
</div>

<div class="modal-body">
    <h2>{{ 'statut.confirm_delete'|trans([], 'statut')}}</h2>
    {{ form_start(delete_form, {'attr': {'id': 'statut_form'}}) }}
    {{ form_end(delete_form) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-danger" data-dismiss="modal">{{ 'statut.close_button'|trans([], 'statut') }}</button>
    <button type="button" class="btn btn-primary" onclick="jQuery('#statut_form').submit()">{{ 'statut.confirm_button'|trans([], 'statut') }}</button>
</div>
