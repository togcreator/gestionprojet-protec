<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title">{{ 'crmetapes.confirm_title'|trans([], 'crmetapes') }}</h5>
</div>

<div class="modal-body">
    <h2>{{ 'crmetapes.confirm_delete'|trans([], 'crmetapes')}}</h2>
    {{ form_start(delete_form, {'attr': {'id': 'crmetapes_form'}}) }}
    {{ form_end(delete_form) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-danger" data-dismiss="modal">{{ 'crmetapes.close_button'|trans([], 'crmetapes') }}</button>
    <button type="button" class="btn btn-primary" onclick="jQuery('#crmetapes_form').submit()">{{ 'crmetapes.confirm_button'|trans([], 'crmetapes') }}</button>
</div>
