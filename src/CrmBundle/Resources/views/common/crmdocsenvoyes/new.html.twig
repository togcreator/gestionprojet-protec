{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
                <!-- /page header -->
    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h2>{{ 'crmdocsenvoyes.creation'|trans({}, 'crmdocsenvoyes') }}</h2>
                    </div>
                    <div class="panel-body">
                    {{ form_start(form, {'attr': {'class':'form-horizontal'}}) }}
                            <fieldset class="content-group">
                                <legend class="text-bold">{{ 'crmdocsenvoyes.crm'|trans({}, 'crmdocsenvoyes') }}</legend>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.idCrm'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.idCrm, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idCrm, {'attr': {'class': 'form-control select2-search'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.idOperation'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.idOperation, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idOperation, {'attr': {'class': 'form-control select2-search'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <legend class="text-bold">{{ 'crmdocsenvoyes.info'|trans({}, 'crmdocsenvoyes') }}</legend>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.designation'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.designation, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.designation, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.nomdoc'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.nomdoc, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.nomdoc, {'attr': {'class': 'form-control upload-file', 'data-preview': preview|default('')}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.dateEnvoi'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.dateEnvoi, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.dateEnvoi, {'attr': {'class': 'form-control datepicker'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.idTypedoc'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.idTypedoc, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idTypedoc, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.origine'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.origine, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.origine, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>

                                <legend class="text-bold">{{ 'crmdocsenvoyes.other'|trans({}, 'crmdocsenvoyes') }}</legend>
                                <div class="row">
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.referenceInterne'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.referenceInterne, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.referenceInterne, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.reference'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.reference, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.idBiblio'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.idBiblio, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idBiblio, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        {% set name = 'crmdocsenvoyes.idMail'|trans({}, 'crmdocsenvoyes') %}
                                        {{ form_label(form.idMail, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idMail, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>

                            </fieldset>
                            <button type="submit" class="btn btn-primary" value="Create">
                                {{ 'crmdocsenvoyes.save_button'|trans({}, 'crmdocsenvoyes') }}
                                <i class="icon-arrow-right14 position-right"></i>
                            </button>
                            <div>{{ form_widget(form.idUser, {'value': app.user.id}) }}</div>
                        {{ form_end(form, {'render_rest': true}) }}
                        <script type="text/javascript">
                            (function($){
                                /* pour projet redirection */
                                $('[name*="[idCrm]"]').on('change', function(){
                                    var _location = document.location.href.toString().split('?');
                                    _location = _location[0];
                                    redirectTo(_location + '?idCRM=' + this.value);
                                });
                            }(jQuery));
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
