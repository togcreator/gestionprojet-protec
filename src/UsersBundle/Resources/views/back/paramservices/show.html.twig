<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title">{{ 'paramservices.confirm_title'|trans([], 'paramservices') }}</h5>
</div>

<div class="modal-body">
    <h2>{{ 'paramservices.confirm_delete'|trans([], 'paramservices')}}</h2>
    {{ form_start(delete_form, {'attr': {'id': 'paramservices_form'}}) }}
    {{ form_end(delete_form) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-danger" data-dismiss="modal">{{ 'paramservices.close_button'|trans([], 'paramservices') }}</button>
    <button type="button" class="btn btn-primary" onclick="jQuery('#paramservices_form').submit()">{{ 'paramservices.confirm_button'|trans([], 'paramservices') }}</button>
</div>
