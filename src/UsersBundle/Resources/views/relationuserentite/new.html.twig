{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <!-- /page header -->
    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'relationuserentite.creation'|trans({}, 'relationuserentite') }}</h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="close" href="{{ path('relationuserentite_index') }}"></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                            <fieldset class="content-group">
                                <div class="form-group">
                                    {% set name = 'relationuserentite.iDUser'|trans({}, 'relationuserentite') %}
                                    {{ form_label(form.iDUser, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.iDUser, {'attr': {'class': 'form-control select2-search' }}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {% set name = 'relationuserentite.idEntiteJ'|trans({}, 'relationuserentite') %}
                                    {{ form_label(form.idEntiteJ, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.idEntiteJ, {'attr': {'class': 'form-control select2-search' }}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {% set name = 'relationuserentite.iDUserEntite'|trans({}, 'relationuserentite') %}
                                    {{ form_label(form.iDUserEntite, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.iDUserEntite, {'attr': {'class': 'form-control select2-search' }}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {% set name = 'relationuserentite.iDRelation_Fonctionnelle'|trans({}, 'relationuserentite') %}
                                    {{ form_label(form.iDRelation_Fonctionnelle, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.iDRelation_Fonctionnelle, {'attr': {'class': 'form-control select2-search' }}) }}
                                    </div>
                                </div>
                            </fieldset>
                            <button type="submit" class="btn btn-primary" value="Edit">
                                {{ 'relationuserentite.save_button'|trans({}, 'relationuserentite') }}
                                <i class="icon-arrow-right14 position-right"></i>
                            </button>
                        {{ form_end(form, {'render_rest': true}) }}
                        <script type="text/javascript">
                            (function($){
                                $('[name*="[idEntiteJ]"]').on('change', function(){
                                    if( this.value == 0 ) return;
                                    var _location = document.location.href.toString().split('?');
                                    _location = _location[0];
                                    redirectTo(_location + '?entite_id=' + this.value);
                                });
                            }(jQuery));
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}