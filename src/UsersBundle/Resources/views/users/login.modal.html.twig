
{% block body %}
    <div class="content">
        <div class="row">
            <div class="col-md-5" style="margin: 5% auto 0; float: none;">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h2>{{ 'users.login_form'|trans }}</h2>
                    </div>
                    <div class="panel-body">
                        <form action="{{ path('users_index') }}" method="post">
                            <div class="form-group">
                                <label for="username">{{ 'users.username'|trans }}</label>
                                <input type="text" name="username" class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label for="username">{{ 'users.password'|trans }}</label>
                                <input type="password" name="password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <button type="submit" name="submit" value="login" class="btn btn-primary"> 
                                    <span>{{ 'users.login_button'|trans }}</span>
                                </button>
                            </div>
                            <div>
                                <input type="hidden" name="referer" value="{{ app.request.attributes.get('referer')|default('homepage') }}"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
