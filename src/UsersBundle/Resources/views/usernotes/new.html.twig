{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <!-- /page header -->
    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'usernotes.creation'|trans({}, 'usernotes') }}</h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="close" href="{{ path('usernotes_index') }}"></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                            <fieldset class="content-group">
                                <legend class="text-bold">{{ 'usernotes.information'|trans({}, 'usernotes')}}</legend>
                                <div class="row">
                                    <div class="form-group col-xs-12">
                                        {% set name = 'usernotes.titre'|trans({}, 'usernotes') %}
                                        {{ form_label(form.titre, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group col-xs-12">
                                        {% set name = 'usernotes.objet'|trans({}, 'usernotes') %}
                                        {{ form_label(form.objet, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.objet, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="hidden">
                                {% if app.request.get('idUser') %}
                                {% set user_id = app.request.get('idUser') %}
                                {% else %}
                                {% set user_id = app.session.get('log') %}
                                {% endif %}

                                {{ form_widget(form.idUser, {value: getIdUser(user_id)}) }}
                                {{ form_widget(form.idUserconcerne, {value: getIdUser(user_id)}) }}
                            </div>
                            <button type="submit" class="btn btn-primary" value="Edit">
                                {{ 'usernotes.save_button'|trans({}, 'usernotes') }}
                                <i class="icon-arrow-right14 position-right"></i>
                            </button>
                        {{ form_end(form, {'render_rest': true}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
