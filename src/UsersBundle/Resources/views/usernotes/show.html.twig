<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h5 class="modal-title">{{ 'usernotes.confirm_title'|trans([], 'usernotes') }}</h5>
</div>

<div class="modal-body">
    <h2>{{ 'usernotes.confirm_delete'|trans([], 'usernotes')}}</h2>
    {{ form_start(delete_form, {'attr': {'id': 'usernotes_form'}}) }}
    {{ form_end(delete_form) }}
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-primary btn-danger" data-dismiss="modal">{{ 'usernotes.close_button'|trans([], 'usernotes') }}</button>
    <button type="button" class="btn btn-primary" onclick="jQuery('#usernotes_form').submit()">{{ 'usernotes.confirm_button'|trans([], 'usernotes') }}</button>
</div>