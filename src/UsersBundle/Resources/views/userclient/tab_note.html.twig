
<div class="content">
    <div class="row">
        <div class="col-lg-12 col-xs-12">
            <!-- Marketing campaigns -->
            <div class="panel panel-flat">
                <div class="panel-heading">
                    <h5 class="panel-title">{{ 'usernotes.list'|trans({}, 'usernotes') }}</h5><br/>
                    <button type="button" class="btn bg-teal-400 btn-labeled legitRipple" onclick="document.location='{{ path('usernotes_new', {idUser: user.id}) }}'">
                        <b><i class="icon-add"></i></b> {{ 'usernotes.add_button'|trans({}, 'usernotes') }}
                    </button>
                </div>
                <div class="panel-body">
            {% if userNotes %}
                <table class="table datatable-basic">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>{{ 'usernotes.titre'|trans({}, 'usernotes') }}</th>
                            <th>{{ 'usernotes.objet'|trans({}, 'usernotes') }}</th>
                            <th class="no-sort">{{ 'global.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in userNotes %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.titre }}</td>
                            <td>{{ user.objet }}</td>
                            <td class="text-center">
                                <ul class="icons-list">
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                            <i class="icon-menu9"></i>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            <li><a href="{{ path('usernotes_edit', { 'id': user.id, idUser: user.id }) }}"><i class="icon-pen"></i> {{ 'usernotes.edit_button'|trans({}, 'usernotes') }}</a></li>
                                            <li><a href="{{ path('usernotes_delete', { 'id': user.id, idUser: user.id }) }}" data-target="#modal_remote" data-toggle="modal"><i class="icon-folder-remove"></i> {{ 'usernotes.del_button'|trans({}, 'usernotes') }}</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <table class="table datatable-show-all">
                    <tbody>
                        <tr>
                            <td>{{ 'usernotes.no_data'|trans({}, 'usernotes') }}</td>
                        </tr>
                    </tbody>
                </table>
            {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
                
