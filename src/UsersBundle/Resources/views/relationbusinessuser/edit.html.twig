{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <!-- /page header -->
    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'relationbusinessuser.edition'|trans({}, 'relationbusinessuser') }}</h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="close" href="{{ path('relationbusinessuser_index') }}"></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-body">
                        {{ form_start(edit_form) }}
                            <fieldset class="content-group">
                                <div class="form-group">
                                    {% set name = 'relationbusinessuser.iDUser'|trans({}, 'relationbusinessuser') %}
                                    {{ form_label(edit_form.iDUser, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(edit_form.iDUser, {'attr': {'class': 'form-control select2-search' }}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {% set name = 'relationbusinessuser.iDBusinessUnit'|trans({}, 'relationbusinessuser') %}
                                    {{ form_label(edit_form.iDBusinessUnit, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(edit_form.iDBusinessUnit, {'attr': {'class': 'form-control select2-search' }}) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {% set name = 'relationbusinessuser.iDRelation_Fonctionnelle'|trans({}, 'relationbusinessuser') %}
                                    {{ form_label(edit_form.iDRelation_Fonctionnelle, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(edit_form.iDRelation_Fonctionnelle, {'attr': {'class': 'form-control select2-search' }}) }}
                                    </div>
                                </div>
                            </fieldset>
                            <button type="submit" class="btn btn-primary" value="Edit">
                                {{ 'relationbusinessuser.save_button'|trans({}, 'relationbusinessuser') }}
                                <i class="icon-arrow-right14 position-right"></i>
                            </button>
                        {{ form_end(edit_form, {'render_rest': true}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}