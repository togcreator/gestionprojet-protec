{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}

        <div class="content">
            <div class="row">
                <div class="col-lg-12 col-xs-12">
                    <!-- Marketing campaigns -->
                    <div class="panel panel-flat">
                        <div class="panel-heading">
                            <h5 class="panel-title">{{ 'relationbusinessuser.list'|trans({}, 'relationbusinessuser') }}</h5><br/>
                            <button type="button" class="btn bg-teal-400 btn-labeled legitRipple" onclick="document.location='{{ path('relationbusinessuser_new') }}'">
                                <b><i class="icon-add"></i></b> {{ 'relationbusinessuser.add_button'|trans({}, 'relationbusinessuser') }}
                            </button>
                        </div>
                    {% if relationBusinessUsers %}
                        <table class="table datatable-basic">
                            <thead>
                                <tr>
                                    <th>{{ 'relationbusinessuser.iDUser'|trans({}, 'relationbusinessuser') }}</th>
                                    <th>{{ 'relationbusinessuser.business'|trans({}, 'relationbusinessuser') }}</th>
                                    <th>{{ 'relationbusinessuser.relation'|trans({}, 'relationbusinessuser') }}</th>
                                    <th>{{ 'relationbusinessuser.service'|trans({}, 'relationbusinessuser') }}</th>
                                    <th class="no-sort">{{ 'global.actions'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for relation in relationBusinessUsers %}
                                <tr>
                                    <td>{{ relation.user.firstname }} {{ relation.user.lastname }}</td>
                                    <td>{{ relation.businessunit.nomBusinessUnit }}</td>
                                    <td>
                                        {% if relation.relationsFonctionnelles %}
                                        {{ relation.relationsFonctionnelles.label }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if relation.service %}
                                            {{ relation.service.label }}
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <ul class="icons-list">
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                                    <i class="icon-menu9"></i>
                                                </a>
                                                <ul class="dropdown-menu dropdown-menu-right">
                                                    <li><a href="{{ path('relationbusinessuser_edit', { 'id': relation.id }) }}"><i class="icon-pen"></i> {{ 'relationbusinessuser.edit_button'|trans({}, 'relationbusinessuser') }}</a></li>
                                                    <li><a href="{{ path('relationbusinessuser_delete', { 'id': relation.id }) }}" data-target="#modal_remote" data-toggle="modal"><i class="icon-folder-remove"></i> {{ 'relationbusinessuser.del_button'|trans({}, 'relationbusinessuser') }}</a></li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                    <table class="table datatable-show-all">
                        <tbody>
                            <tr>
                                <td>{{ 'relationbusinessuser.no_data'|trans({}, 'relationbusinessuser') }}</td>
                            </tr>
                        </tbody>
                    </table>
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>
                
{% endblock %}
