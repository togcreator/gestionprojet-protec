{% extends 'base.html.twig' %}

{% block body %}
    {% include 'header.html.twig' %}
    <!-- /page header -->
    <div class="content">
        <div class="row">
            <div class="col-lg-12 col-xs-12">
                <div class="panel panel-flat">
                    <div class="panel-heading">
                        <h5 class="panel-title">{{ 'userdocs.creation'|trans({}, 'userdocs') }}</h5>
                        <div class="heading-elements">
                            <ul class="icons-list">
                                <li><a data-action="close" href="{{ path('userdocs_index') }}"></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="panel-body">
                        {{ form_start(form) }}
                            <fieldset class="content-group">
                                <legend class="text-bold">{{ 'userdocs.information'|trans({}, 'userdocs')}}</legend>
                                <div class="row">
                                    <div class="form-group col-xs-12">
                                        {% set name = 'userdocs.designation'|trans({}, 'userdocs') %}
                                        {{ form_label(form.designation, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.designation, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group col-xs-12">
                                        {% set name = 'userdocs.nomdoc'|trans({}, 'userdocs') %}
                                        {{ form_label(form.nomdoc, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.nomdoc, {'attr': {'class': 'form-control upload-file', 'data-preview': ''}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group col-xs-12">
                                        {% set name = 'userdocs.idUser4origine'|trans({}, 'userdocs') %}
                                        {{ form_label(form.idUser4origine, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.idUser4origine, {'attr': {'class': 'form-control select2-search'}}) }}
                                        </div>
                                    </div>

                                    <div class="form-group col-xs-12">
                                        {% set name = 'userdocs.origine'|trans({}, 'userdocs') %}
                                        {{ form_label(form.origine, name, {'label_attr': {'class': 'control-label col-lg-2'}})|raw }}
                                        <div class="col-lg-10">
                                            {{ form_widget(form.origine, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>

                                </div>
                            </fieldset>
                            <div class="hidden">
                                {% if app.request.get('idUser') %}
                                {% set user_id = app.request.get('idUser') %}
                                {% else %}
                                {% set user_id = app.session.get('log') %}
                                {% endif %}

                                {{ form_widget(form.iDUser, {value: getIdUser(user_id)}) }}
                            </div>
                            <button type="submit" class="btn btn-primary" value="Edit">
                                {{ 'userdocs.save_button'|trans({}, 'userdocs') }}
                                <i class="icon-arrow-right14 position-right"></i>
                            </button>
                        {{ form_end(form, {'render_rest': true}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
