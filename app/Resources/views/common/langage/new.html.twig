{% extends 'base.html.twig' %}

{% block body %}
    {% include 'ProjectBundle:back:head.html.twig' %}
        <div class="page-container">
            <!-- Page content -->
            <div class="page-content">

                <!-- Main content -->
                <div class="content-wrapper">

                    <!-- Form horizontal -->
                    <div class="panel panel-flat">
                        <div class="panel-heading">
                            <h5 class="panel-title">{{ 'langage.new_title'|trans({}, 'langage') }}</h5>
                            <div class="heading-elements">
                                <ul class="icons-list">
                                    <li><a data-action="close" href="{{ path('back_param_index') }}"></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="panel-body">
                            {{ form_start(form) }}
                            <fieldset class="content-group">
                                <div class="form-group">
                                    {% set name = 'langage.label'|trans({}, 'langage') %}
                                    {{ form_label(form.labels, name, {'label_attr': {'class': 'control-label col-lg-2'}})|trans|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.labels, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {% set name = 'langage.iso'|trans({}, 'langage') %}
                                    {{ form_label(form.iso, name, {'label_attr': {'class': 'control-label col-lg-2'}})|trans|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.iso, {'attr': {'class': 'form-control'}, 'row': 5}) }}
                                    </div>
                                </div>

                                <div class="form-group">
                                    {% set name = 'langage.abr'|trans({}, 'langage') %}
                                    {{ form_label(form.abr, name, {'label_attr': {'class': 'control-label col-lg-2'}})|trans|raw }}
                                    <div class="col-lg-10">
                                        {{ form_widget(form.abr, {'attr': {'class': 'form-control'}, 'row': 5}) }}
                                    </div>
                                </div>

                            </fieldset>
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary">{{ 'langage.submit_button'|trans({}, 'langage') }} <i class="icon-arrow-right14 position-right"></i></button>
                            </div>
                        {{ form_end(form, {'render_rest': true}) }}
                        </div>
                    </div>
                    <!-- /form horizontal -->

                </div>
                <!-- /main content -->

            </div>
        <!-- /page content -->
        </div>
        {% include 'ProjectBundle:back:foot.html.twig' %}
{% endblock %}

{% block javascripts %}
    {% set dir = 'backoffice/' %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {% set dir = 'backoffice/' %}
    {{ parent() }}
{% endblock %}