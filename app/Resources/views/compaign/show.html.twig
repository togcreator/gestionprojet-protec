{% extends 'base.html.twig' %}

{% block body %}
    
    <h1>Compaign</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ compaign.id }}</td>
            </tr>
            <tr>
                <th>Iduser</th>
                <td>{{ compaign.idUser }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ compaign.budget }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ compaign.status }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if compaign.dateDebut %}{{ compaign.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if compaign.dateFin %}{{ compaign.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ compaign.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('compaign_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('compaign_edit', { 'id': compaign.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
