{% extends 'base.html.twig' %}

{% block body %}
    <h1>Typecompaign</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ typeCompaign.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ typeCompaign.name }}</td>
            </tr>
            <tr>
                <th>Datecreated</th>
                <td>{% if typeCompaign.dateCreated %}{{ typeCompaign.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('typecompaign_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('typecompaign_edit', { 'id': typeCompaign.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
